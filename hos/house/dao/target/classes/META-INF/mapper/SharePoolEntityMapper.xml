    <!-- 查询共享团队列表,根据我的部门 -->
    <select id="selectByMyDept" parameterType="java.util.Map" resultMap="BaseResultMap"
            resultType="com.kfwy.hkp.hos.house.entity.SharePoolEntity">
        SELECT
        c.user_img as leader_img,
        d.leader_code,
        d.leader_name,
        P .share_code,
        P .share_name,
        P .share_type,
        spd.share_dept_code AS s_dept_code,
        p.share_dept_code as share_dept_code,
        d.dept_name as share_dept_name

        FROM
        t_hkp_share_pool p
        LEFT JOIN t_hkp_share_pool_dept spd ON P .share_code = spd.share_code
        left join t_hkp_hrm_org_dept d on d.dept_code = p.share_dept_code
        left join t_hkp_sys_user_user c on c.user_code = d.leader_code
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="shareDeptCode != null">
                AND spd.share_dept_code = #{shareDeptCode}
            </if>
        </trim>
    </select>


